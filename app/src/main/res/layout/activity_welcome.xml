<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backit">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Welcome" >


    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="13dp"
        android:layout_marginTop="15dp" >

        <ImageView
            android:id="@+id/banner_img"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="fitCenter"
            android:src="@drawable/imagelogoo"
            android:alpha="0.2"
            android:contentDescription="image" />

        <TextView
            android:layout_marginTop="35dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#0E82D2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Construction log App"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#0E82D2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To Construction Log App"/>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="13dp"
        android:layout_marginTop="10dp" >

        <EditText
            android:id="@+id/userName"

            android:paddingTop="10dp"

            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:hint="Username"
            android:textColorHint="#0E82D2"
            android:background="#ffffff"
            android:textColor="#0E82D2"
            android:paddingLeft="5dp"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="13dp"
        android:layout_marginTop="10dp" >

        <EditText

            android:id="@+id/passWord"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"
            android:layout_width="280dp"

            android:layout_height="40dp"
            android:hint="Password"
            android:textColorHint="#0E82D2"
            android:background="#ffffff"
            android:textColor="#0E82D2"
            android:paddingLeft="5dp"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#0E82D2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="Select User Type"/>


        <RadioGroup
            android:id="@+id/accountsG"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#0E82D2"

            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/admin"
                android:text="Admin"
                android:checked="true"
                android:background="#ffffff"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/user"
                android:text="User"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/client"
                android:text="Client"
                android:background="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:text="Login"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:textColor="#ffffff"
        android:background="#626c70"
        />

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_gravity="center"
            android:id="@+id/userSignUp"
            android:padding="10dp"
            android:background="#626c70"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User-Register"
            android:textColor="#ffffff" />
        <Button
            android:layout_gravity="center"
            android:id="@+id/clientSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#626c70"
            android:text="Client-Register"
            android:padding="10dp"
            android:textColor="#ffffff" />

    </LinearLayout>



</LinearLayout>
</ScrollView>

